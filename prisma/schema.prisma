generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  first_name String
  last_name  String
  email      String  @unique
  password   String
  is_admin   Boolean @default(false)
  pets       Pet[]   @relation("OwnedPets")
  saved_pets Pet[]   @relation("SavedPets")

  @@map("users")
}

model Pet {
  id             Int     @id @default(autoincrement())
  type           String
  name           String
  adoptionStatus String  @map("adoption_status")
  picture        String
  height         Float
  weight         Float
  color          String
  dietary        String?
  bio            String?
  hypoallergenic Boolean
  breed          String?
  owner          User?   @relation("OwnedPets", fields: [owner_id], references: [id])
  owner_id       Int?
  saved_by       User[]  @relation("SavedPets")

  @@map("pet")
}
